{% block main %}
<div class="container">
<h2>Gestion des commentaires</h2>
<table class="table table-striped table-hover">
<thead>
<tr>
        <th scope="col"> id </td>
        <th scope="col"> idBlogpost </td>
        <th scope="col"> firstname </td>
        <th scope="col"> lastname </td>
        <th scope="col"> commentary </td>
        <th scope="col"> date </td>
        <th scope="col"> isValidated </td>
    </tr>
</thead>
<tbody>
	{% for commentary in commentaries %}
    <tr>
        <td> {{ commentary.id }} </td>
        <td> {{ commentary.idBlogpost }} </td>
        <td> {{ commentary.firstname }} </td>
        <td> {{ commentary.lastname }} </td>
        <td> {{ commentary.commentary }} </td>
        <td> {{ commentary.date }} </td>
        <td>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" {% if commentary.isValidated == true %}checked {% endif %}> </td>
            </div> 
        
        
    </tr>
	{% endfor %}
    </tbody>
</table>
</div>
{% endblock %}
