{% block main %}
<div class="container">
<h2>Gestion des articles</h2>
<table class="table table-striped table-hover">
<thead>
<tr>
        <th scope="col"> id </td>
        <th scope="col"> Author </td>
        <th scope="col"> title </td>
        <th scope="col"> slug </td>
        <th scope="col"> chapo </td>
        <th scope="col"> publishedDate </td>
        <th scope="col"> lastUpdate </td>
        <th scope="col"> isPublished </td>
    </tr>
</thead>
<tbody>
	{% for post in posts %}
    <tr>
        <td> {{ post.id }} </td>
        <td> {{ post.firstname }} {{ post.lastname }} </td>
        <td> {{ post.title }} </td>
        <td> {{ post.slug }} </td>
        <td> {{ post.chapo }} </td>
        <td> {{ post.publishedDate }} </td>
        <td> {{ post.lastUpdate }} </td>
        <td>
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault"{% if post.isPublished == true %}checked {% endif %}>
            </div>
        </td>
    </tr>
	{% endfor %}
    </tbody>
</table>
</div>
{% endblock %}
