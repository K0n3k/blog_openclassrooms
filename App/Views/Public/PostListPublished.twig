{% extends "layout.twig" %}
{% block main %}
<div class="container">
	{% for post in postListPublished %}
	<div class="mb-3">
	<a class="nav-link" href="/blog/{{ post.id }}/{{ post.slug|replace({ " " : "-" }) }}">
	<div class="card row">
		<div class="card-header">
		<h2>{{ post.title }}</h2>
		</div>
		<div class="card-body">
		{{ post.content|raw }}
		</div>
		<div class="card-footer">
			Publi√© le {{ post.publishedDate }} par {{ post.firstname }} {{ post.lastname }}
		</div>
	</div>
	</a>
	</div>
	{% endfor %}
</div>
{% endblock %}